test-suite hblog-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , hspec
                     , QuickCheck
                     , process
                     , directory
                     , transformers
                     , yaml
                     , filepath
                     -- , hspec-core
                     -- , hspec-meta
  ghc-options:         -threaded -Wall
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/rlpowell/hblog
